<!-- top contributors -->
<div class="card">
  <ul class="list-group list-group-flush list-group-latest-contributors">
    <% discourse_top_contributors.each do |top_contributor| %>
      <!-- user -->
      <li class="list-group-item">
        <% if top_contributor['participant'].present? %>
          <%= link_to discourse_user_url(top_contributor['participant'].name) do %>
            <%= image_tag top_contributor['participant'].image_url, class: "avatar" %>
            <span class="text-link"><%= top_contributor['participant'].name %></span>
          <% end %>
        <% end %>

        <div class="reputation-info">
          <span class="reputation-score" data-toggle="tooltip" data-placement="top" title="" data-original-title="Reputation score"><%= top_contributor['score'] %></span>
        </div>
      </li>
      <!-- /user -->
    <% end %>
  </ul>
</div>
<!-- /top contributors -->
