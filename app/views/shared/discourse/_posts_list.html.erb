<div class="sub-section-pb-sm">
  <% if defined?(discourse_category) %>
    <header class="section-header">
      <div>
        <h4><%= discourse_category %></h4>
      </div>
    </header>
  <% end %>

  <% discourse_posts.each do |discourse_post| %>
    <!-- topic – comment -->
    <div class="topic-comment">
      <%= link_to discourse_user_url(discourse_post['username']) do %>
        <% if defined?(participant) %>
          <%= image_tag participant.image_url, class: 'avatar' %>
        <% else %>
          <%= image_tag discourse_post['avatar_url'], class: 'avatar' %>
        <% end %>
      <% end %>
      <div class="discussion-topic-body">
        <h3><%= link_to discourse_post['topic_title'], discourse_topic_url(discourse_post['topic_slug']), target: '_blank' %></h3>
        <span class="discussion-details"><%= discourse_time_ago(discourse_post['created_at']) %></span>

        <p><%= sanitize_html(discourse_post['cooked']) %></p>

        <div class="btn-set" aria-hidden="true">
          <%= link_to 'View post', discourse_post_url(discourse_post['topic_slug'], discourse_post['topic_id'], discourse_post['post_number']), class: 'btn btn-secondary btn-sm', target: '_blank' %>
          <button type="button" class="btn btn-secondary btn-sm disabled"data-toggle="tooltip" data-placement="top" title="Like topic">
            <svg width="12" height="11" xmlns="http://www.w3.org/2000/svg"><path d="M10.8746251 6.14539024L5.97691577 11.0430996 1.07920644 6.14539024C.43154568 5.50196808.03030318 4.61061457.03030318 3.62554576c0-1.96049121 1.58929212-3.54978364 3.54978364-3.54978364.92305599 0 1.76382467.35231416 2.39516959.92980603.63649437-.6044087 1.49691101-.97526512 2.44394586-.97526512 1.96049123 0 3.54978363 1.58929242 3.54978363 3.54978364 0 1.00819292-.4203017 1.91821904-1.0952455 2.56441886z" fill="#F0524D" fill-rule="evenodd"/></svg>
            <%= discourse_post['like_count'] %>
          </button>
        </div>
      </div>
    </div>
    <!-- topic – comment -->
  <% end %>
</div>
