<!-- section -->
<div class="section-p-md">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <% if @participant_challenges.blank? and @count_of_unknown.zero? %>
          <div class="md-content">
            <%= "No participants for this challenge yet" %>
          </div>
        <% else %>
          <ul class="list-group list-group-flush-px-0 list-group-organizers" id="pc-ul" data-page='1' data-request-completed='true' data-challenge-id='<%= @challenge.friendly_id %>' data-controller="participant-challenges">
            <% unless @count_of_unknown.zero? %>
              <li class="list-group-item">
                <%= link_to '#' do %>
                  <%= image_tag default_image_url, class: 'avatar' %>
                  <span class="text-link"> Unknown Participant </span>
                  <span class="badge badge-primary">x<%= @count_of_unknown %></span>
                <% end %>
              </li>
            <% end %>
            <%= render partial: 'participant_challenge_rows' %>
          </ul>
        <% end %>
      </div>
    </div>
  </div>
</div>
<!-- /section -->
