<% submissions = challenge.meta_challenge? ? submitter.meta_challenge_submissions(challenge) : submitter.challenge_submissions(challenge) %>
<% submissions_group_by_day = submissions.group_by_created_at %>
<%= line_chart submissions_group_by_day, width: width, height: "50px", library: { scales: { yAxes: [{gridLines: { display: false }, ticks: { display: false } }], xAxes: [{ gridLines: { display: false }, ticks: { display: false } }]} }, points: submissions_group_by_day.count == 1, id: "chart-#{id}", dataset: { tooltip: { z: 100 } } %>
