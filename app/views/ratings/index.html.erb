<div class="masthead">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <h1>AIcrowd Leaderboard</h1>
      </div>
    </div>
  </div>
</div>
<!-- /masthead -->
<!-- filter -->
<div class="filter-bar">
  <div class="container-fluid">
    <div class="row" style="width: 100%;">
      <div class="col-6">
        <div class="leaderboard-srch">
          <div class="input-group">
            <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)" placeholder="Search for any participant,institute,rank etc" style="background-color: white; border-bottom-left-radius: 20px; border-top-left-radius: 20px;">
            <div class="input-group-append">
              <button class="btn btn-srch" type="button">
                <i class="fa fa-search"></i>
              </button>
            </div>
          </div>
        </div>
      </div>
      <div class="col-6">
        <div class="btn-filter col-2 float-right">
          <i class="fa fa-filter" aria-hidden="true" style="vertical-align: -webkit-baseline-middle;"></i>
          <a href="#" style="vertical-align: -webkit-baseline-middle;">FILTERS</a>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- /filter -->

<!-- filtered text -->
<div class="container-fluid">
  <% if params[:status].present? || params[:categories].present? || params[:prizes].present? %>
    <p class='card-text'>
      <%= filter_message(params[:status], params[:categories], params[:prizes]) %>
      <%= link_to 'Clear Filter', challenges_path, class: 'btn btn-sm apply-filter-btn none-underline'  %>
    </p>
  <% end %>
</div>
<!-- /filtered text -->


<div class="container-fluid">
