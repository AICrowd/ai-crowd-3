<!-- section -->
<div class="row">
    <div class="col-12">
        <%= form_for @challenge.challenge_problems.new, :url => "#" do |f| %>

        <div class="form-group">
            <label>Problem (ID of the challenge)</label>
            <%= f.text_field :problem_id, class: "form-control" %>
        </div>

        <div class="form-group">
            <label>Weight</label>
            <%= f.text_field :weight, class: "form-control" %>
        </div>

        <%= f.button 'Submit', type: 'submit', class: "btn btn-primary" %>
        <% end %>
    </div>
</div>
