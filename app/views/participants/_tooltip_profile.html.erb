<div class="tooltip-inner-top">
<%= participant_avatar participant %>
    <div>
        <strong><%= participant.name %></strong>
        <br>
        <div class="reputation-info">
            <%= render partial: 'participants/show_reputation', locals: { participant: participant, full: true, partial_class: 'reputation-top' } %>
            <%= render partial: 'participants/show_temporary_reputation', locals: { participant: participant, full: true, partial_class: 'reputation-top' } %>
          <%= render partial: 'participants/show_badges', locals: { participant: participant } %>
            <br>
            <span class="reputation-rank">Rank: #<%= participant.ranking %></span>
        </div>
    </div>
</div>
<hr>
<div class="user-location">
    <%= render partial: 'participants/location', locals: { participant: participant } %>
    <%= render :partial => 'shared/utility/flag', locals: { country_cd: participant.country_cd } %>
</div>
<div class="user-organization">
    <%= participant.affiliation %>
</div>