<span class="reputation-info" style="<%= style ||= '' %>">
<% if participant.admin %>
  <span class="reputation-score" aria-label="Admin" 
      data-balloon-pos="up">
    ###
  </span>
<% else %>
  <span class="reputation-score" aria-label="<%= participant.rating.to_i %> ± <%= participant.variation.to_i %>" 
      data-balloon-pos="up">
    <% if defined?(full) and full %>
      <%= participant.rating.to_i %> ± <%= participant.variation.to_i %>
    <% else %>
      <%= participant.rating.to_i %>
    <% end %>
  </span>
<% end %>
</span>
