<span class="reputation-info" style="<%= style ||= '' %>">
<% if current_participant&.admin? && !participant.admin %>
  <span class="reputation-score" data-toggle="tooltip" title="tentative rating: <%= participant.final_temporary_rating %> ± <%= participant.temporary_variation.to_i %>">
    <% if defined?(full) && full %>
      <%= participant.final_temporary_rating %> ± <%= participant.temporary_variation.to_i %>
    <% else %>
      <%= participant.final_temporary_rating %>
    <% end %>
  </span>
<% end %>
</span>
