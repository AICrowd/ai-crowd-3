<div class="challenges-form__thin-tab">
  <h2 class="challenges-form__heading">Challenge Export</h2>

  <div class="form-group">
    <%= link_to 'Export to JSON', export_challenge_path(challenge), class: 'btn btn-primary challenges-form__misc-button', data: { disable_with: 'Challenge Exported' } %>
  </div>

  <h2 class="challenges-form__heading">Leaderboard Export</h2>

  <div class="form-group">
    <label>Challenge Round for Leaderboard Export</label>
    <%= select_tag :leaderboard_export_challenge_round_id,
                   options_for_select(challenge_rounds.map { |challenge_round| [challenge_round.challenge_round, challenge_round.id] }),
                   id: 'leaderboard-export-rounds-select',
                   class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= link_to 'Export to CSV', export_challenge_leaderboards_path(challenge, leaderboard_export_challenge_round_id: challenge_rounds.first&.id.to_i), id: 'leaderboard-export-link', class: 'btn btn-primary challenges-form__misc-button' %>
  </div>

  <h2 class="challenges-form__heading">Submissions Export</h2>
  <% if @challenge.meta_challenge %>
    <p>Please select the individual problem for which you want to export the data.</p>
  <% else %>
    <div class="form-group">
      <label>Challenge Round for Submissions Export</label>
      <%= select_tag :submissions_export_challenge_round_id,
                    options_for_select(challenge_rounds.map { |challenge_round| [challenge_round.challenge_round, challenge_round.id] }),
                    id: 'submissions-export-rounds-select',
                    class: 'form-control' %>
    </div>

    <div class="form-group">
       <%= link_to 'Export to CSV', export_challenge_submissions_path(challenge, submissions_export_challenge_round_id: challenge_rounds&.first&.id.to_i), id: 'submissions-export-link', class: 'btn btn-primary challenges-form__misc-button' %>
    </div>
  <% end %>

  <h2 class="challenges-form__heading">Participants Export</h2>

  <div class="form-group">
    <%= link_to 'Export to CSV', export_challenge_challenge_participants_url(challenge), id: 'participants-export-link', class: 'btn btn-primary challenges-form__misc-button' %>
  </div>

  <h2 class="challenges-form__heading">Re-Evaluate Submissions</h2>

  <div class="form-group">
    <%= link_to 'Reevaluate Submissions', reevaluate_submission_challenge_submissions_path(challenge), data: { confirm: '⚠️ Warning: Doing this will re-evaluate all the submissions made to ongoing round. Do you want to continue?' }, class: 'btn btn-primary challenges-form__misc-button' %>
  </div>

  <h2 class="challenges-form__heading">Make Submission Notebooks Public</h2>

  <div class="form-group">
    <%= link_to 'Make Notebooks Public', make_notebooks_public_challenge_path(challenge), data: { confirm: '⚠️ Warning: Doing this will make all submissons public. Do you want to continue?' }, class: 'btn btn-primary challenges-form__misc-button' %>
  </div>

  <div class="btn-set" aria-hidden="true">
    <%= link_to 'Cancel', challenge_path(f.object), class: 'btn btn-secondary' %>
  </div>
</div>
