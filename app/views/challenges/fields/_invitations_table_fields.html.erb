<!-- section header -->
<header class="sub-section-header challenges-form__invite-participant">
  <div></div>
  <div class="links">
    <%= button_tag '+ Invite participant', class: 'btn btn-secondary btn-sm challenge-invite-participant', type: 'button'  %>
  </div>
</header>
<!-- /section header -->

<!-- table: invited participants -->
<div class="table-responsive mb-4 datatable-table" data-controller="simple-datatables" data-table-id="challenges-form-invitations-datatable">
  <table class="table" id="challenges-form-invitations-datatable">
    <thead>
      <tr>
        <th>Email</th>
        <th>Name</th>
        <th>Username</th>
        <th>Invited (UTC)</th>
	      <th>Remove?</th>
      </tr>
    </thead>
    <tbody>
      <%= f.fields_for :invitations do |invitation| %>
        <tr>
          <td><%= invitation.object.email %></td>
          <td><%= invitation.object.invitee_name %></td>
          <td><%= participant_invitation(email: invitation.object.email) %></td>
          <td><%= invitation.object.created_at %></td>
          <td><%= link_to "remove", remove_invited_challenge_path(@challenge, invited_id: invitation.object.id), class: 'challenge-invitation-remove-invited', remote: true %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<!-- /table: invited participants -->
