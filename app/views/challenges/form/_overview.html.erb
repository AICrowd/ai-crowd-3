<%= form_for [@organizer,@challenge], validate: true, html: { class: "dbl-col" } do |f| %>

<div class="form-group">
  <span class="label-text">Overview</span>
  <%= markdown_editor do |m| %>
  <%= f.text_area :description_markdown, class: "form-control" %>
  <% end %>
</div>


<div class="form-group">
  <span class="label-text">Prizes Breakdown</span>
  <div class="form-group">Prize Money: <%= f.text_field :prize_cash , class: "form-control" %></div>
  <div class="form-group">Travel Grants: <%= f.text_field :prize_travel, class: "form-control" %></div>
  <div class="form-group">Academic Papers: <%= f.text_field :prize_academic, class: "form-control" %></div>
  <div class="form-group">Misc Prizes: <%= f.text_field :prize_misc, class: "form-control" %></div>
</div>

<fieldset>
  <h4>Partner Logos</h4>
  <div id='partner-logos'>
    <%= f.fields_for :challenge_partners do |partner| %>
    <%= render 'challenges/form/challenge_partner_fields', f: partner %>
    <% end %>
    <div class='links'>
      <%= link_to_add_association '+ Partner Logo', f, :challenge_partners,
      html_options = { partial: 'challenges/form/challenge_partner_fields' } %>
    </div>
  </div>
  <br/><br/>
</fieldset>
<%= render partial: 'challenges/form/submit_buttons', locals: { f: f } %>
<% end %>
</fieldset>
