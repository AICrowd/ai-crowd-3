<% cache_if cache_enabled?, [submission, is_organiser_or_author] do %>
  <div class="d-flex col-sm-12 col-md-6">
    <% if description_markdown.present? && is_organiser_or_author %>
      <hr/>
      <div class="md-content w-100">
        <%= description_markdown %>
      </div>
    <% end %>
  </div>
<% end %>