<!-- app header -->
<header class="app-header">
  <div class="container-fluid">

    <div class="app-header-section">
      <!-- app brand -->
      <div class="app-brand">
        <a class="logo-aicrowd" href="/">
          <span>AIcrowd</span>
        </a>
      </div>

      <form>
        <input type="text" class="form-control search-input" placeholder="Search..." aria-label="Search" aria-describedby="Search">
      </form>
    </div>

    <% if current_participant %>
      <div class="app-header-section">

        <ul class="nav">
          <li class="nav-item">
            <%= link_to 'Challenges', challenges_path, {:class=> "nav-link"} %>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Achievements</a>
          </li>
          <li class="nav-item">
            <%= link_to 'Blog', blogs_path, {:class=> "nav-link"} %>
          </li>
          <li class="nav-item">
            <%= link_to 'Log Out', destroy_participant_session_path, :method => :delete %>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"><svg width="16" height="4" xmlns="http://www.w3.org/2000/svg"><path d="M2 0C.9 0 0 .9 0 2s.9 2 2 2 2-.9 2-2-.9-2-2-2zm12 0c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2zM8 0C6.9 0 6 .9 6 2s.9 2 2 2 2-.9 2-2-.9-2-2-2z" fill="#909293" fill-rule="nonzero"/></svg></a>
            <div class="dropdown-menu dropdown-menu-right">
              <a class="dropdown-item" href="#">Organize a challenge</a>
              <a class="dropdown-item" href="#">FAQ</a>
              <a class="dropdown-item" href="#">Contact</a>
            </div>
          </li>
        </ul>

        <div class="dropdown">
          <button class="app-header-toggler" type="button" id="" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span class="app-header-toggler-icon">
              <svg width="16" height="4" xmlns="http://www.w3.org/2000/svg"><path d="M2 0C.9 0 0 .9 0 2s.9 2 2 2 2-.9 2-2-.9-2-2-2zm12 0c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2zM8 0C6.9 0 6 .9 6 2s.9 2 2 2 2-.9 2-2-.9-2-2-2z" fill="#5D5F60" fill-rule="nonzero"/></svg>
            </span>
          </button>
          <div class="dropdown-menu dropdown-menu-right">
            <a class="dropdown-item" href="#">Challenges</a>
            <a class="dropdown-item" href="#">Achievements</a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="#">Blog</a>
            <a class="dropdown-item" href="#">Organize a challenge</a>
            <a class="dropdown-item" href="#">FAQ</a>
            <a class="dropdown-item" href="#">Contact</a>
          </div>
        </div>


        <!-- notifications -->
        <div class="app-header-notifications">
          <div class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
              <img src="assets/img/icon-notifications-active.svg" alt="Notifications">
            </a>
            <div class="dropdown-menu dropdown-menu-notifications dropdown-menu-right">
              <!-- notification -->
              <a class="dropdown-item dropdown-item-active" href="#">
                <div class="dropdown-item-img">
                  <img class="avatar" src="assets/img/user-avatar-2.png">
                </div> 
                <div> 
                  <span><strong>spMohanty</strong> mentioned you in a post</span><br>
                  <span class="text-muted">10 mins ago</span>
                </div>
              </a>
              <!-- /notification -->
              <div class="dropdown-divider"></div>
              <!-- notification -->
              <a class="dropdown-item dropdown-item-active" href="#">
                <div class="dropdown-item-img">
                  <img class="challenge" src="assets/img/card-challenge-1.jpg">
                </div> 
                <div> 
                  <span>Your <strong>Challenge title</strong> submission has been graded with a score of <strong>673.22</strong></span><br>
                  <span class="text-muted">3 hours ago</span>
                </div>
              </a>
              <!-- /notification -->
              <div class="dropdown-divider"></div>
              <!-- notification -->
              <a class="dropdown-item" href="#">
                <div class="dropdown-item-img">
                  <img class="award" src="assets/img/award-gold.svg">
                </div> 
                <div> 
                  <span>You have been awarded the <strong>Top position during challenge: Gold</strong> achievement<br>
                  <span class="text-muted">Yesterday</span>
                </div>
              </a>
              <!-- /notification -->
              <div class="dropdown-divider"></div>
              <!-- notification -->
              <a class="dropdown-item" href="#">
                <div class="dropdown-item-img">
                  <img class="challenge" src="assets/img/card-challenge-2.jpg">
                </div> 
                <div> 
                  <span>You have moved from 3rd place to <strong>2nd place</strong> in the <strong>Challenge title</strong> leaderboard<br>
                  <span class="text-muted">3 days ago</span>
                </div>
              </a>
              <!-- /notification -->
              <div class="dropdown-divider"></div>
              <!-- notification -->
              <a class="dropdown-item" href="#">
                <div class="dropdown-item-img">
                  <img class="avatar" src="assets/img/user-avatar-1.jpg">
                </div> 
                <div> 
                  <span><strong>DYNAMO</strong> mentioned you in a post</span><br>
                  <span class="text-muted">1 week ago</span>
                </div>
              </a>
              <!-- /notification -->
            </div>
          </div>
        </div>
        <!-- /notifications -->

        <div class="member-options">
          <div class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"><img class="avatar" src="assets/img/user-avatar-default.svg" alt="Username"></a>
            <div class="dropdown-menu dropdown-menu-right">
              <a class="dropdown-item" href="#"><strong>Username</strong><br>
              View profile</a>
              <a class="dropdown-item" href="#">Edit profile</a>
              <a class="dropdown-item" href="#">Account settings</a>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item" href="#">Log out</a>
            </div>
          </div>
        </div>

      </div>

      <% else %>

      <div class="app-header-section">

        <ul class="nav">
          <li class="nav-item">
            <%= link_to 'Challenges', challenges_path, {:class=> "nav-link"} %>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Achievements</a>
          </li>
          <li class="nav-item">
            <%= link_to 'Blog', blogs_path, {:class=> "nav-link"} %>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"><svg width="16" height="4" xmlns="http://www.w3.org/2000/svg"><path d="M2 0C.9 0 0 .9 0 2s.9 2 2 2 2-.9 2-2-.9-2-2-2zm12 0c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2zM8 0C6.9 0 6 .9 6 2s.9 2 2 2 2-.9 2-2-.9-2-2-2z" fill="#909293" fill-rule="nonzero"/></svg></a>
            <div class="dropdown-menu dropdown-menu-right">
              <a class="dropdown-item" href="#">Organize a challenge</a>
              <a class="dropdown-item" href="#">FAQ</a>
              <a class="dropdown-item" href="#">Contact</a>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item" href="#">Sign up</a>
            </div>
          </li>
        </ul>

        <div class="dropdown">
          <button class="app-header-toggler" type="button" id="" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span class="app-header-toggler-icon">
              <svg width="16" height="4" xmlns="http://www.w3.org/2000/svg"><path d="M2 0C.9 0 0 .9 0 2s.9 2 2 2 2-.9 2-2-.9-2-2-2zm12 0c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2zM8 0C6.9 0 6 .9 6 2s.9 2 2 2 2-.9 2-2-.9-2-2-2z" fill="#5D5F60" fill-rule="nonzero"/></svg>
            </span>
          </button>
          <div class="dropdown-menu dropdown-menu-right">
            <a class="dropdown-item" href="#">Challenges</a>
            <a class="dropdown-item" href="#">Achievements</a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="#">Blog</a>
            <a class="dropdown-item" href="#">Organize a challenge</a>
            <a class="dropdown-item" href="#">FAQ</a>
            <a class="dropdown-item" href="#">Contact</a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="#">Log in</a>
            <a class="dropdown-item" href="#">Sign up</a>
          </div>
        </div>

        <div class="user-options">
          <%= link_to '<button type="button" class="btn btn-secondary">Log in</button>'.html_safe, new_participant_session_path %>
        </div>

      </div>
      <% end %>
    </div>
</header>


