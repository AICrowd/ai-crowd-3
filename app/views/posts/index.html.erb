<div class="container-fluid">
  <header class="section-header col-12 section-p-sm">
    <div>
      <h3>Contributions</h3>
    </div>
    <% if current_participant.present?%>
      <%= button_to 'New Contribution', new_post_path, class: "btn btn-secondary btn-sm", method: :get %>
    <% end %>
  </header>
  <ul class="list-group list-group-flush-px-0 list-group-achievements">
    <% Post.friendly.all.each do |post| %>
      <!-- achievement -->
      <li class="list-group-item">
        <div class="col-md-12 p-0">
          <a class="mr-2 col-md-1 col-3" href="<%= post_path(post) %>">
            <img src="<%=post.thumbnail%>" width=80 height=80>
          </a>
          <div class="col-md-11 p-0 col-9 ml-2">
            <%= link_to post.title, post_path(post)%>
            <span class="description">
              <%= post.tagline %>
            </span>
            <br/><small class="fixed-bottom position-absolute">By <div style="display: inline-flex;"><%= render partial: 'participants/get_user_profile', locals: { participant: post.participant} %></div> <%= "#{discourse_time_ago(post.created_at)}" %></small>
          </div>
        </div>
        <div class="row">
          <div class="btn-set" aria-hidden="true">
            <%= link_to post_likes_path(post), id: post.id, method: :post, remote: true do %>
            <button type="button" class="btn btn-secondary btn-sm">
              <svg width="12" height="11" xmlns="http://www.w3.org/2000/svg"><path d="M10.8746251 6.14539024L5.97691577 11.0430996 1.07920644 6.14539024C.43154568 5.50196808.03030318 4.61061457.03030318 3.62554576c0-1.96049121 1.58929212-3.54978364 3.54978364-3.54978364.92305599 0 1.76382467.35231416 2.39516959.92980603.63649437-.6044087 1.49691101-.97526512 2.44394586-.97526512 1.96049123 0 3.54978363 1.58929242 3.54978363 3.54978364 0 1.00819292-.4203017 1.91821904-1.0952455 2.56441886z" fill="#F0524D" fill-rule="evenodd"/></svg>
              <%= post.likes.count %>
            </button>
            <% end %>
          </div>
        </div>
      </li>
      <!-- /achievement -->
    <% end %>
  </ul>

</div>
