<!-- blog post -->
<div class="col-sm-12 col-md-4">
  <div class="card card-blog-post">
    <div class="card-body">
      <h5 class="card-title"><%= link_to blog.title, blog_path(blog) %></h5>
      <p class="card-text"><%= local_time(blog.posted_at, "%-d %B %Y") %></p>
    </div>

    <div class="card-footer">
      <%= render partial: 'participants/get_user_profile', locals: { participant: blog.participant } %>
    </div>
  </div>
</div>
<!-- /blog post -->
