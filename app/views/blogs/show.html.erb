<!-- masthead – blog post -->
<div class="masthead masthead-blog-post">
  <div class="container-fluid">

    <!-- title -->
    <div class="row">
      <div class="col-12">
        <h1><%= @blog.title %></h1>
        <p><%= local_time(@blog.posted_at, "%-d %B %Y") %></p>
      </div>
    </div>
    <!-- /title -->

    <!-- author/options -->
    <div class="row">
      <div class="col-12 d-flex align-items-center flex-wrap">
        <div class="author">
          <%= link_to concept(Image::Cell,@blog.participant,class: "avatar"), participant_path(@blog.participant)%>
          <span>
            By <%= link_to @blog.participant.name, participant_path(@blog.participant) %>
          </span>
        </div>

        <div class="btn-set" aria-hidden="true">
          <%= concept(Vote::Cell,
                @blog,
                current_participant: current_participant) %>
        </div>
      </div>
    </div>
    <!-- /author/options -->

  </div>
</div>
<!-- /masthead – blog post -->

<!-- section -->
<div class="section-p-md">
  <div class="container-fluid">
    <div class="row">

      <!-- md content -->
      <div class="col-12">
        <div class="md-content">
          <%= @blog.body.html_safe %>
        </div>
      </div>
      <!-- /md content -->

    </div> 
  </div>
</div>
