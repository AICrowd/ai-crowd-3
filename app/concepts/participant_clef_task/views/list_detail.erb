          <% if eua_required? %>
            <%= link_to participant_clef_task.eua_file.url,
              target: :_blank do %>
            <i class="fa fa-file-pdf-o fa-2x" aria-hidden="true"></i>
            <% end %>
          <% end %>
        </div>
        <div>
          <%= clef_status %>
        </div>
      <div>
      </div>
    </div>
  </div>
</li>
