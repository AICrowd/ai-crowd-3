      <tr>
        <td class="leaderboard-change">
          <%= ranking_change(entry) %>
            
        </td>
        <td><strong><%= "%02d" % (entry.row_num) %></strong></td>
        <td>
          <%= link_to participant_path(participant) do %>
            <%= concept(Image::Cell, participant, :klass=>"avatar") %>
            <span class="text-link"><%= participant.name %></span>
          <% end %>
        </td>

        <% if challenge.media_on_leaderboard %>
          <td>
            <%= concept(Leaderboard::Cell::Media,
                entry,
                size: :thumb,
                submission_id: entry.submission_id,
                current_participant: current_participant) %>
          </td>
        <% end %>


        <td><strong><%= formatted_score %></strong></td>
        <td><strong><%= formatted_score_secondary %></strong></td>
        <% other_scores_array.each do |other_score| %>
          <td><strong><%= other_score %></strong></td>
        <% end %>
        <td><%= entry.entries %></td>

        <td class="text-right"><%= local_time(entry.created_at, "%a, %e %b %Y %H:%M") %></td>
        <td class="text-right">
              <%= link_to challenge_submission_path(
                    challenge, entry.submission_id),
                    class: 'btn btn-secondary btn-sm' do %>
                    View
              <% end %>
        </td>
      </tr>
